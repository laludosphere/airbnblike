<div class="home-banner">
  <div class="container">
    <p class="padding-banner"> Find the flat you deserve</p>
  </div>
</div>

<div class="container  mt-4">
  <div class="form-row search-form-control">
    <div class="form-group col-md-3">
    <%= simple_form_for :flats_filter, url: flats_path, method: :get do |f| %>
      <%= f.input :search, label: false, input_html: { placeholder: "Champ de recherche" }, class:'form-control' %>
    </div>
    <div class="form-group col-md-2">
      <%= f.input :min_price, label: false, input_html: { type: :number, min: "0", placeholder: "Prix mini" }, class:'form-control'%>
    </div>
    <div class="form-group col-md-2">
     <%= f.input :max_price, label: false, input_html: { type: :number, placeholder: "Prix max" }, class:'form-control'%>
    </div>
    <div class="form-group col-md-1">
      <%= f.input :start_date, label: false, input_html: { type: :date }, class:'form-control'%>
    </div>
    <div class="form-group col-md-1">
     <%= f.input :end_date, label: false, input_html: { type: :date }, class:'form-control'%>
    </div>
    <div class="form-group col-md-1">
      <%= f.submit "search", class: "button-simple" do %>
      <i class="fas fa-search"></i> 
      <% end %>
    </div>
  </div>
  <% end %>



<div class="container">
  <div class="row">
    <div class="col-8">
      <% @flats.each do |flat| %>
      <div class="card-post shadow">
        <div class="card-post-img">
          <%= image_tag 'https://images.unsplash.com/photo-1551169795-9e8eb7adb400?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60'%>  
        </div>
        <div class="card-post-info">
        <div class="card-post-title">
          <h2><%= flat.name %></h2>
        </div>
          <p><%=flat.address %></p>
          <p><%=flat.price %></p>
          <p>Ajouter une description</p>
        </div>
        <div class="card-post-read-more">
          <p><%= link_to 'Read More', flat_path(flat), class: 'button-simple' %> </p>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-4">
      <div id="map"
            style="width: 100%; height: 600px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
   </div>
  </div>
  </div>
</div>