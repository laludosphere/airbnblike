<footer class="page-footer font-small cyan darken-3">

  <!-- Footer Elements -->
  <div class="container text-center">

    <!-- Grid row-->
    <div class="row">

      <!-- Grid column -->
      <div class="col-md-12 pt-5 mb-4">
        <div class="flex-center">

          <!-- Facebook -->
          <%= link_to "https://www.facebook.com/", class: "without-decoration", target: :_blank do %>
            <i class="fab fa-facebook-f fa-lg white-text mr-md-5 mr-3 fa-x"></i>
          <% end %>
          <!-- Twitter -->
          <%= link_to "https://twitter.com/", class: "without-decoration", target: :_blank do %>
            <i class="fab fa-twitter fa-lg white-text mr-md-5 mr-3 fa-x"></i>
          <% end %>
          <!-- Google +-->
          <%= link_to "https://myaccount.google.com/", class: "without-decoration", target: :_blank do %>
            <i class="fab fa-google-plus-g fa-lg white-text mr-md-5 mr-3 fa-x"></i>
          <% end %>
          <!--Linkedin -->
          <%= link_to "https://www.linkedin.com/", class: "without-decoration", target: :_blank do %>
            <i class="fab fa-linkedin-in fa-lg white-text mr-md-5 mr-3 fa-x"></i>
          <% end %>
          <!--Instagram-->
          <%= link_to "https://www.instagram.com/", class: "without-decoration", target: :_blank do %>
            <i class="fab fa-instagram fa-lg white-text mr-md-5 mr-3 fa-x"></i>
          <% end %>
          <!--Pinterest-->
          <%= link_to "https://www.pinterest.fr/", class: "without-decoration", target: :_blank do %>
            <i class="fab fa-pinterest fa-lg white-text fa-x"></i>
          <% end %>
        </div>
      </div>
      <!-- Grid column -->

    </div>
    <!-- Grid row-->

  </div>
  <!-- Footer Elements -->

</footer>
<!-- Footer -->